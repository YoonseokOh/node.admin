<body class="login">
  <div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>

    <div class="login_wrapper">
      <div class="animate form login_form">
        <section class="login_content">
          <form id="frmLogin" method="POST">
            <h1>Admin</h1>
            <div>
              <input name="login_id" type="text" class="form-control" placeholder="Id" required="" />
            </div>
            <div>
              <input name="password" type="password" class="form-control" placeholder="Password" required="" />
            </div>
            <div>
              <button type="submit" class="btn btn-default submit">Log in</button>
            </div>

            <div class="clearfix"></div>

            <div class="separator">
              <div class="clearfix"></div>
              <br />
              
              <div>
                <h1><img src="/icon/logo.png" alt="logo" style="max-width: 300px"></h1>
                <p>Â© Copyright 2018 Company, Inc. All rights reserved.</p>
              </div>
            </div>
          </form>
        </section>
      </div>
    </div>
  </div>
  
<script src="/components/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
$('#frmLogin').submit(function () {
  $.ajax({
    type: 'POST',
    url: '/auth/login',
    data: {
      login_id: $('input[name="login_id"]').val(),
      password: $('input[name="password"]').val(),
      redirect: getParameterByName('redirect')
    },
    success: function (args) {
      if (args.succeed) {
        location.href = args.redirect;
      } else {
        alert(args.status.message);
      }
    },
    error: function (e) {  
      alert(e.responseText);
    }
  });
  return false;
});

function getParameterByName(name) {
    name = name.replace(/[\[\]]/g, "\\$&");
    var url = window.location.href;
    var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)");
    var results = regex.exec(url);
    if (!results) return null;
    if (!results[2]) return '';
    return decodeURIComponent(results[2].replace(/\+/g, " "));
}
</script>

</body>
